<%- include("partials/header"); -%>

<form action="/add_cat" method="post">
  <div class="form-group">
    <label for="cat_name">Category Name</label>
    <input type="text" class="form-control" id="cat_name" name="cat_name" aria-describedby="fnameField" placeholder="Enter Category Name">
  </div>
  <div class="form-group">
    <label for="cat_descr">Category Description</label>
    <input type="text" class="form-control" id="cat_descr" name="cat_descr" aria-describedby="lnameField" placeholder="Enter Category Description">
  </div>
  <div class="form-group">
    <label for="cat_image">Category Image</label>
    <input type="file" class="form-control-file" id="cat_image" id="cat_image">
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>
<%- include("partials/footer"); -%>
